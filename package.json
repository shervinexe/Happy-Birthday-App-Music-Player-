{
  "name": "hbd-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yourname.hbdtarget",
    "productName": "HBD Target",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.jpg"
    },
    "extraFiles": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
